[Unit]
Description=XHS OCR Service
After=network.target

[Service]
Type=simple
User=callfans
WorkingDirectory=/home/callfans/data/ocr/SocialMediaOCR
Environment=TZ=Asia/Shanghai
ExecStart=/home/callfans/miniconda3/bin/conda run -n py312 python /home/callfans/data/ocr/SocialMediaOCR/xhs_ocr.py --mode schedule --at-time "22:00"
Restart=always
StandardOutput=append:/home/callfans/data/ocr/SocialMediaOCR/logs/run.log
StandardError=append:/home/callfans/data/ocr/SocialMediaOCR/logs/run.log

[Install]
WantedBy=multi-user.target